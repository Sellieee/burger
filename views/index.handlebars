<div class="container">
   <div class="jumbotron jumbotron-fluid">
      <div class="container">
         <h1 class="display-4 burger-title">Eat these burgers</h1>
      </div>
   </div>
</div>

{{!-- Eating the burger --}}
<div class="row" id="eat-burgers">
   <div class="col-sm-6">
      <h4 class="burgers-h4">Eat me!!</h4>
      {{#each burgers}}
      {{#unless devoured}}
      <form action="burger/eat{{id}}" method="POST">
         <div class="input-group">
            <li class="form-control">{{id}}.{{burger_name}}</li>
            <span class="input-group-btn">
               <button class="btn btn-info devour-button" type="submit">"Devour It!"
               </button>
            </span>
         </div>
      </form>
      {{/unless}}
      {{/each}}
   </div>
</div>

{{!-- Burgers already eaten --}}
<div class="col-md-6">
   <h4 class="burgers-h4">Scrumptious! Yumm!</h4>
   <div id="eaten-burgers">
      {{#each burgers}}
      {{#if this.devoured}}
      <div class="input-group">
         <li class="form-control">{{this.id}}.{{this.burger_name}}</li>
         <span class="input-group-btn">
            <button class="btn btn info devoured-button" type="button">Devoured!</button>
         </span>
      </div>
      {{/if}}
      {{/each}}
   </div>
</div>